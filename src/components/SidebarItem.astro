---
import "unocss-hmr-fix";

export interface Props {
    name: string;
    href: string;
}

const { name, href } = Astro.props;

const currentPath = Astro.url.pathname;

const fixedPath =
  currentPath.length > 1 && currentPath.endsWith("/")
    ? currentPath.slice(0, -1)
    : currentPath;
---

<a class="hover:opacity-[unset]!" href={href}>
    <div class={`flex flex-row text-tlight border-l-3 border-transparent ${fixedPath === href ? "border-accent!" : ""} pl-2 py-2 hover:border-accent hover:border-accent/[.3]`}>
        {name}
    </div>
</a>