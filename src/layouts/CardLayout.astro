---
import "unocss-hmr-fix";
import CordwoodLogo from "../components/CordwoodLogo.astro";

export interface Props {
	title: string;
}

import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title={Astro.props.title ?? Astro.props.content.title}>
	<main class="w-full h-full p-2">
        <div class="flex flex-col">
            <CordwoodLogo variant="black" width="520" />
            <div class="bg-dark text-tlight rounded-md p-2 flex flex-col gap-2">
                <slot />
            </div>
        </div>
	</main>
</BaseLayout>